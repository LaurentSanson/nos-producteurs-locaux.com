{% extends 'base.html.twig' %}

{% block title %}Mon exploitation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">Historique de commandes</h1>
                </div>
                <table class="mb-0 table table-striped">
                    <thead>
                    <tr>
                        <th class="text-center">Date de commande</th>
                        <th class="text-center">Nombre de produits</th>
                        <th class="text-center">Total TTC</th>
                        <th class="text-center">Statut</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td class="text-center">{{ order.createdAt | date('d/m/Y') }}</td>
                            <td class="text-center">{{ order.numberOfProducts }}</td>
                            <td class="text-center">{{ order.totalInculdingTaxes | format_currency('EUR') }}</td>
                            <td class="text-center">
                                {% if order.state == 'created' %}
                                    <span class="badge badge-info">En cours de traitement</span>
                                {% elseif order.state == 'refused' %}
                                    <span class="badge badge-danger">Refusée</span>
                                {% elseif order.state == 'accepted' %}
                                    <span class="badge badge-success">Acceptée</span>
                                {% elseif order.state == 'settled' %}
                                    <span class="badge badge-primary">Récupérée</span>
                                {% elseif order.state == 'canceled' %}
                                    <span class="badge badge-danger">Annulée</span>
                                {% endif %}
                            </td>
                            <td class="text-center">
                                {% if is_granted('cancel', order) %}
                                    <a href="{{ path('order_cancel', {id: order.id}) }}"
                                       class="btn btn-outline-warning">Annuler</a>
                                {% elseif order.state == 'accepted' and order.chosenSlot is not null %}
                                    <a href="{{ path('order_choose_slot', {id: order.id}) }}"
                                       class="btn btn-outline-warning">Choisir votre créneau</a>
                                {% else %}
                                    <span class="badge badge-primary">Aucune action nécessaire</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
