{% extends 'base.html.twig' %}

{% block title %}Mon exploitation{% endblock %}

{% block body %}
    {{ form_start(farmForm) }}
    <div class="row justify-content-center align-items-stretch">
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="mb-0">Mon exploitation</h1>
                </div>
                <div class="card-body">
                    {{ form_row(farmForm.name) }}
                    {{ form_row(farmForm.description) }}
                    <div class="form-group">
                        {{ form_label(farmForm.address.address) }}
                        {{ form_widget(farmForm.address.address) }}
                        <ul class="auto-complete"></ul>
                        {{ form_errors(farmForm.address.address) }}
                    </div>
                    {{ form_row(farmForm.address.restAddress) }}
                    {{ form_row(farmForm.address.postCode) }}
                    {{ form_row(farmForm.address.city) }}

                    <button type="button" class="btn btn-outline-danger btn-remove-file" data-target="#farm_image_path">Supprimer l'image</button>
                    {{ form_row(farmForm.image) }}
                </div>
                <div class="card-footer">
                    <button class="btn btn-block btn-primary">Modifier</button>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card h-100">
                <div class="card-body p-0 flex-grow-1">
                    <div id="map" class="w-100 h-100"></div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(farmForm) }}
{% endblock %}

{% block javascripts %}
    <script defer
            src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}&callback=initMap">
    </script>
    {{ encore_entry_script_tags('update_farm') }}
{% endblock %}
